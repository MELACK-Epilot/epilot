# ============================================
# ENVIRONNEMENT SANDBOX - CONFIGURATION
# ============================================
# Ce fichier contient les variables d'environnement
# pour l'environnement sandbox de développement

# ============================================
# SUPABASE
# ============================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# SANDBOX
# ============================================
# Activer le mode sandbox
VITE_SANDBOX_MODE=true

# Nombre de groupes scolaires à générer
VITE_SANDBOX_GROUPS_COUNT=5

# Nombre d'écoles par groupe (min-max)
VITE_SANDBOX_SCHOOLS_PER_GROUP_MIN=3
VITE_SANDBOX_SCHOOLS_PER_GROUP_MAX=5

# Nombre d'élèves par école (min-max)
VITE_SANDBOX_STUDENTS_PER_SCHOOL_MIN=100
VITE_SANDBOX_STUDENTS_PER_SCHOOL_MAX=800

# Nombre d'enseignants par école (min-max)
VITE_SANDBOX_TEACHERS_PER_SCHOOL_MIN=10
VITE_SANDBOX_TEACHERS_PER_SCHOOL_MAX=50

# Générer les notes (true/false)
VITE_SANDBOX_GENERATE_GRADES=true

# ============================================
# DONNÉES FICTIVES
# ============================================
# Locale pour faker.js
VITE_FAKER_LOCALE=fr

# Seed pour la génération aléatoire (pour reproductibilité)
VITE_FAKER_SEED=12345

# ============================================
# PERFORMANCE
# ============================================
# Taille des batches pour l'insertion
VITE_SANDBOX_BATCH_SIZE=1000

# Délai entre les batches (ms)
VITE_SANDBOX_BATCH_DELAY=100

# ============================================
# SÉCURITÉ
# ============================================
# Afficher le badge sandbox
VITE_SHOW_SANDBOX_BADGE=true

# Couleur du badge sandbox
VITE_SANDBOX_BADGE_COLOR=orange

# ============================================
# DEBUG
# ============================================
# Activer les logs détaillés
VITE_SANDBOX_DEBUG=true

# Afficher les statistiques après génération
VITE_SANDBOX_SHOW_STATS=true
